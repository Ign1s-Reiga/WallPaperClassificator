<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WallPaperClassificator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WallPaperClassificator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WallPaperClassificator"
    SizeChanged="CurrentWindow_SizeChanged"
>
	<Grid
        x:Name="BackgroundPanel"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Padding="100,200"
		RowSpacing="5"
        Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
    >
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
			<TextBox
            Header="Path to WallPaper Directory"
            PlaceholderText="path/to/"
            x:Name="WallPaperDirPath"
        />
		<Button Content="Start Classificate" Click="StartClassificate_Click" />
		<ListView
            x:Name="FileList"
            ItemsSource="{x:Bind Files}"
            SelectionMode="None"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="1"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Center"
            Height="300"
            Width="500"
        >
			<ListView.ItemTemplate>
				<DataTemplate x:DataType="x:String">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Image Stretch="None" Width="50" Height="50" Source="{x:Bind}" />
						<TextBlock Text="{x:Bind}" />
					</Grid>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</Window>
