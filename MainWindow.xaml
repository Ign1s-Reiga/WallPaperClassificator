<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WallPaperClassificator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WallPaperClassificator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WallPaperClassificator"
    SizeChanged="CurrentWindow_SizeChanged"
>
	<Grid x:Name="BackgroundPanel" Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}">
		<NavigationView
			x:Name="MainNavView"
			IsBackButtonVisible="Collapsed"
			Loaded="MainNavView_Loaded"
			ItemInvoked="MainNavView_ItemInvoked"
		>
			<NavigationView.MenuItems>
				<NavigationViewItem Icon="Folder" Content="Classificate" Tag="MainPage" />
				<NavigationViewItem Icon="Pictures" Content="Slideshow" Tag="MainPage" />
			</NavigationView.MenuItems>
			<Frame x:Name="ContentFrame"/>
		</NavigationView>
	</Grid>
</Window>
